{
  "compilerOptions": {
    // File Layout
    "outDir": "./dist",
    
    // Environment
    "moduleResolution": "node",        
    "module": "commonjs",              
    "target": "es2019",                
    "types": ["node"],

    // Output
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // TypeScript Interop
    "esModuleInterop": true,          
    "allowSyntheticDefaultImports": true,

    // Stricter Typechecking
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // JSON + Modules
    "resolveJsonModule": true,

    // Recommended
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/data/**/*.json", "prisma/**/*"]
}
